{
  "name": "api-framework/api-core",
  "description": "Simple and easy PHP Framework to build ast a RESTFul API",
  "type": "library",
  "require": {
    "php": "8.1.*",
    "ext-yaml": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Dennis Munchausen",
      "email": "munchausen.dennis@gmail.com"
    }
  ],
  "autoload": {
    "classmap": [
      "src/",
      "tests/"
    ],
    "psr-4": {
      "ApiCore\\": "src",
      "ApiCoreTest\\": "tests/"
    }
  },
  "scripts": {
    "all-tests": [
      "vendor/bin/phpunit -c tests/phpunit.xml tests/"
    ]
  }
}
